<odoo>
    <!-- Kanban View Data Kendaraan -->
    <record id="view_vehicle_data_kanban" model="ir.ui.view">
        <field name="name">vehicle.data.kanban</field>
        <field name="model">vehicle.data</field>
        <field name="arch" type="xml">
            <kanban default_group_by="company_id">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <img t-if="record.image.raw_value" t-att-src="'/web/image/vehicle.data/' + record.id.raw_value + '/image'" class="oe_kanban_image" style="max-width:60px;max-height:60px;"/>
                            </div>
                            <div>
                                <strong><field name="license_plate"/></strong> : <field name="name"/>
                                <br/>
                                <field name="company_id"/>
                                <br/>
                                <field name="division"/>
                                <br/>
                                <field name="location"/>
                                <br/>
                                <field name="vehicle_type"/> | <field name="year"/>
                                <br/>
                                <field name="driver"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View Data Kendaraan -->
    <record id="view_vehicle_data_form" model="ir.ui.view">
        <field name="name">vehicle.data.form</field>
        <field name="model">vehicle.data</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </group>
                    <group>
                        <field name="name" placeholder="misal. Avanza G" required="1"/>
                        <field name="license_plate" placeholder="misal. B 123 IGU" required="1"/>
                    </group>
                    <group>
                        <field name="company_id"/>
                        <field name="division"/>
                        <field name="location"/>
                        <field name="vehicle_type"/>
                        <field name="year" placeholder="misal. 09-2015 (Bulan-Tahun)"/>
                    </group>
                    <group string="General Informasi">
                        <field name="driver"/>
                        <field name="chassis_number"/>
                        <field name="engine_number"/>
                        <field name="last_odometer"/>
                        <field name="fuel_type"/>
                        <field name="transmission"/>
                        <field name="purchase_date"/>
                        <field name="price"/>
                    </group>
                    <group string="Informasi Tambahan">
                        <field name="seats"/>
                        <field name="doors"/>
                        <field name="color"/>
                    </group>
                    <group string="Informasi Biaya">
                        <field name="total_cost" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Contracts">
                            <field name="contract_ids">
                                <list>
                                    <field name="contract_number"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="partner_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Costs">
                            <field name="cost_ids">
                                <list>
                                    <field name="cost_type"/>
                                    <field name="amount"/>
                                    <field name="date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Services">
                            <field name="service_ids">
                                <list>
                                    <field name="service_type"/>
                                    <field name="date"/>
                                    <field name="cost"/>
                                </list>
                            </field>
                        </page>
                        <page string="Fuel">
                            <field name="fuel_ids">
                                <list>
                                    <field name="fuel_type"/>
                                    <field name="liter"/>
                                    <field name="date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Odometer">
                            <field name="odometer_ids">
                                <list>
                                    <field name="odometer_value"/>
                                    <field name="date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_vehicle_data_list" model="ir.ui.view">
        <field name="name">vehicle.data.list</field>
        <field name="model">vehicle.data</field>
        <field name="arch" type="xml">
            <list>
                <field name="license_plate"/>
                <field name="name"/>
                <field name="company_id"/>
                <field name="division"/>
                <field name="vehicle_type"/>
                <field name="year"/>
                <field name="driver"/>
            </list>
        </field>
    </record>

    <!-- Action dan Menu Data Kendaraan -->
    <record id="action_vehicle_data" model="ir.actions.act_window">
        <field name="name">Data Kendaraan</field>
        <field name="res_model">vehicle.data</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
    <menuitem id="menu_vehicle_data_main" name="Data Kendaraan" sequence="1"/>
    <menuitem id="menu_vehicle_data" name="Data Kendaraan" parent="menu_vehicle_data_main" action="action_vehicle_data" sequence="2"/>
    <menuitem id="menu_vehicle_contract" name="Kontrak Kendaraan" parent="menu_vehicle_data_main" action="action_vehicle_contract" sequence="3"/>
    <menuitem id="menu_vehicle_odometer" name="Odometer Kendaraan" parent="menu_vehicle_data_main" action="action_vehicle_odometer" sequence="4"/>
    <menuitem id="menu_vehicle_fuel" name="Bahan Bakar Kendaraan" parent="menu_vehicle_data_main" action="action_vehicle_fuel" sequence="5"/>
    <menuitem id="menu_vehicle_service" name="Service Kendaraan" parent="menu_vehicle_data_main" action="action_vehicle_service" sequence="6"/>

